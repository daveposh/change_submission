{
  "platform-version": "2.3",
  "product": {
    "freshservice": {
      "location": {
        "full_page_app": {
          "url": "index.html",
          "icon": "styles/images/icon.svg",
          "name": "Change Request"
        }
      },
      "requests": {
        "getRequesters": {},
        "getAgents": {},
        "getAssets": {},
        "getServices": {},
        "getRequesterDetails": {},
        "getLocation": {}
      },
      "storage": {
        "data_storage": {
          "properties": {
            "change_request_data": {
              "type": "object",
              "description": "Draft change request data"
            },
            "change_request_draft_id": {
              "type": "string",
              "description": "ID of the draft change request"
            },
            "location_cache": {
              "type": "object",
              "description": "Cached location data"
            },
            "user_cache": {
              "type": "object",
              "description": "Cached user data"
            }
          }
        }
      },
      "config_page": {
        "url": "config.html",
        "optional": false
      }
    }
  },
  "engines": {
    "node": "18.19.1",
    "fdk": "9.4.2"
  },
  "iparams": {
    "freshservice_plan": {
      "display_name": "Freshservice Plan",
      "description": "Select your Freshservice plan to configure API rate limits",
      "type": "dropdown",
      "options": [
        {
          "label": "Starter",
          "value": "starter"
        },
        {
          "label": "Growth",
          "value": "growth"
        },
        {
          "label": "Pro",
          "value": "pro"
        },
        {
          "label": "Enterprise",
          "value": "enterprise"
        }
      ],
      "required": true,
      "default_value": "enterprise"
    },
    "api_safety_margin": {
      "display_name": "API Safety Margin",
      "description": "Safety margin for API limits (0.1-1.0). Example: 0.7 means 70% of rate limits",
      "type": "number",
      "required": true,
      "default_value": "0.7"
    },
    "inventory_type_id": {
      "display_name": "Inventory Software/Services Type ID",
      "description": "Asset Type ID to use for filtering inventory software or services",
      "type": "number",
      "required": true,
      "default_value": "33000752344"
    },
    "search_cache_timeout": {
      "display_name": "Search Cache Timeout",
      "description": "Time in milliseconds to wait before refreshing search results from cache (default 7000 = 7 seconds)",
      "type": "number",
      "required": true,
      "default_value": "7000"
    }
  }
}
