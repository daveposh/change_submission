{
  "getRequesters": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/requesters",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key) %>"
      },
      "query": {
        "query": "~[first_name|last_name|primary_email]:'{requester_query}'"
      }
    }
  },
  "getAgents": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/agents",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key) %>"
      },
      "query": {
        "query": "~[first_name|last_name|email]:'{agent_query}'"
      }
    }
  },
  "getRequesterDetails": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/requesters/{requester_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key) %>"
      }
    }
  },
  "getLocation": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/locations/{location_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key) %>"
      }
    }
  },
  "getAssets": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/assets",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key) %>"
      },
      "query": {
        "query": "{asset_query}"
      }
    }
  },
  "getServices": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/services",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key) %>"
      },
      "query": {
        "query": "{service_query}"
      }
    }
  }
} 