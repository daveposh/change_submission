{
  "getRequesters": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/requesters",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getAgents": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/agents",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getRequesterDetails": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/requesters/{requester_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getLocations": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/locations",
      "query": {
        "page": "<%= context.page || '1' %>",
        "per_page": "<%= context.per_page || '30' %>"
      },
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getLocation": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/locations/{location_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getAssets": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/assets",
      "query": {
        "search": "\"<%= context.search_query %>\"",
        "include": "<%= context.include_fields %>"
      },
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getAssetDetails": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/assets/<%= context.asset_id %>",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getAssetRelationships": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/assets/<%= context.asset_id %>/relationships",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getServices": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/services",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "getAssetTypes": {
    "schema": {
      "method": "GET",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/asset_types",
      "query": {
        "page": "<%= context.page || '1' %>",
        "per_page": "<%= context.per_page || '30' %>"
      },
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  },
  "createChange": {
    "schema": {
      "method": "POST",
      "protocol": "https",
      "host": "<%=iparam.freshservice_domain%>",
      "path": "/api/v2/changes",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic <%= encode(iparam.api_key + ':X') %>"
      }
    }
  }
} 